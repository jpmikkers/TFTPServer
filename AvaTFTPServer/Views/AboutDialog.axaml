<Window
    x:Class="AvaTFTPServer.AboutDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaTFTPServer.ViewModels"
    Title="About.."
	MinWidth="250"
	MinHeight="220"
    d:DesignWidth="700"
    d:DesignHeight="450"
    Width="700"
    Height="450"
    x:DataType="vm:AboutDialogViewModel"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <!--<Design.DataContext>
		<vm:ErrorDialogViewModel/>
	</Design.DataContext>-->

    <DockPanel>
        <Border Padding="8,8,8,0" DockPanel.Dock="Top">
			<StackPanel Spacing="4">
				<TextBlock FontSize="28">About TFTP Server</TextBlock>
				<TextBlock>
					<Run>Version:</Run>
					<Run FontWeight="Bold" Text="{CompiledBinding Version}"/>
				</TextBlock>
				<TextBlock>
					<Run>Operating system:</Run>
					<Run FontWeight="Bold" Text="{CompiledBinding OperatingSystemDescription}"/>
				</TextBlock>
				<TextBlock>
					<Run>Architecture:</Run>
					<Run FontWeight="Bold" Text="{CompiledBinding Architecture}"/>
				</TextBlock>
				<TextBlock>
					<Run>Project homepage:</Run>
					<InlineUIContainer>
						<Button Classes="link" Content="{CompiledBinding ProjectUrl}" Command="{CompiledBinding VisitProjectUrlCommand}"></Button>
					</InlineUIContainer>
				</TextBlock>
			</StackPanel>
		</Border>

        <Border Padding="8,8,8,8" DockPanel.Dock="Bottom">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    Classes="accent"
                    Command="{CompiledBinding OkayCommand}"
                    IsCancel="True"
                    IsDefault="True">
                    OK
                </Button>
            </StackPanel>
        </Border>

        <TextBox
            Margin="8,8,8,0"
            xml:space="preserve"
            FontFamily="{StaticResource MonospacedFontFamily}"
            IsReadOnly="True"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto"            
            TextWrapping="Wrap">MIT
